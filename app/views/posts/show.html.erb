<div id="post_show_content" class="skinny_wrapper wrapper_padding">
<header>
	<p class="date"><%= @post.created_at.strftime('%A, %B %b') %></p>
		<h1><%= @post.title %></h1>
	<hr>
</header>

	<div id="content">
		<%= @post.content %>
	</div>

	<hr>
	<div id="share_box">
		<p>Share The Do List</p>

		<a href="https://au.linkedin.com/in/kenams-keita" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a>

		<a href="https://github.com/kenams" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a>

		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by kenams42 - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
		<i class="fa fa-twitter" aria-hidden="true"></i></a>
	</div>

	<hr>
</div>

<br>
<br>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post ?"} %>